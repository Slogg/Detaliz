
@if (ViewBag.Service == "Вызов" || ViewBag.Service == "Все услуги" || ViewBag.Service == "СМС")
{
    <script>
            var data = [
            {
               value: parseFloat(@ViewBag.PercDurTOfD[0].ToString("0.##").Replace(',', '.')),
               color: '#665E60',
               highlight: '#666E80',
                label:  '06:00 - 12:00'
            },
           {
               value: parseFloat(@ViewBag.PercDurTOfD[1].ToString("0.##").Replace(',', '.')),
               color: '#FFB400',
               highlight: '#FFB520',
               label:  '12:00 - 18:00'
           },
           {
               value: parseFloat(@ViewBag.PercDurTOfD[2].ToString("0.##").Replace(',', '.')),
               color: '#F50000',
               highlight: '#F50120',
               label:  '18:00 - 24:00'
           },
           {
               value: parseFloat(@ViewBag.PercDurTOfD[3].ToString("0.##").Replace(',', '.')),
               color: '#04ED14',
               highlight: '#04EE34',
               label: '24:00 - 06:00'
           }];

            var options = {
                responsive: true,
                segmentShowStroke: true,
                animateRotate: false,
                animateScale: false,
                percentageInnerCutout: 0,
                tooltipTemplate: "<%= label %>: <%= value %>%"
            }

            var ctx = document.getElementById("TOfDSms").getContext("2d");

            var myChart = new Chart(ctx).Doughnut(data, options);

            // Note - tooltipTemplate is for the string that shows in the tooltip
            // legendTemplate is if you want to generate an HTML legend for the chart and use somewhere else on the page  e.g:

    </script>
    <div class="col-md-6">
        <div id="schedule" style="height: 200px">
            <canvas id="TOfDSms" style="width: 100%; height: 100%;"></canvas>
        </div>
    </div>
    <div class="col-md-6">
        <div class="table-operator">
            <table>
                <tr>
                    <th>Цвет</th>
                    <th>Времясуток</th>
                    <th>Кол-во(шт)</th>
                    <th>Процент(%)</th>
                </tr>
                @if (ViewBag.DurTOfD[0] != 0)
                {
                    <tr>
                        <td class="table-color" style="background-color: #665E60; "></td>
                        <td class="table-td">06:00 - 12:00</td>
                        <td class="table-td">@ViewBag.DurTOfD[0] шт.</td>
                        <td class="table-td">@ViewBag.PercDurTOfD[0].ToString("0.##") %</td>
                    </tr>
                }
                @if (ViewBag.DurTOfD[1] != 0)
                {
                    <tr>
                        <td class="table-color" style="background-color: #ffb400; "></td>
                        <td class="table-td">12:00 - 18:00</td>
                        <td class="table-td">@ViewBag.DurTOfD[1] шт.</td>
                        <td class="table-td">@ViewBag.PercDurTOfD[1].ToString("0.##") %</td>
                    </tr>
                }
                @if (ViewBag.DurTOfD[2] != 0)
                {
                    <tr>
                        <td class="table-color" style="background-color: #F50000; "></td>
                        <td class="table-td">18:00 - 24:00</td>
                        <td class="table-td">@ViewBag.DurTOfD[2] шт.</td>
                        <td class="table-td">@ViewBag.PercDurTOfD[2].ToString("0.##") %</td>
                    </tr>
                }
                @if (ViewBag.DurTOfD[3] != 0)
                {
                    <tr>
                        <td class="table-color" style="background-color: #04ED14; "></td>
                        <td class="table-td">24:00 - 06:00</td>
                        <td class="table-td">@ViewBag.DurTOfD[3] шт.</td>
                        <td class="table-td">@ViewBag.PercDurTOfD[3].ToString("0.##") %</td>
                    </tr>
                }
            </table>
        </div>
    </div>
}


