@model Detaliz2.Models.FileUpload

@using (Ajax.BeginForm("Collapse", "Home", null, new AjaxOptions { UpdateTargetId = "jumbotron" }, new { @class = "form-select-panel" }))
{
    <ul class="nav navbar-nav">
            <li class="col-md-2-mod"><label class="lb-form-selectpanel">Начиная:</label></li>
            
            <li class="col-md-3-mod">  
                <div class="form-group">
                    <div class="input-group date" id="datetimepicker1">
                        <input name="DateFirst" type="text" class="form-control" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>

                <script type="text/javascript">
      $(function () {
        //Установим для виджета русскую локаль с помощью параметра language и значения ru
        $('#datetimepicker1').datetimepicker(
          { pickTime: false, language: 'ru' }
        );
      });
                </script>
            </li>
        <li class="col-md-2-mod"><label class="lb-form-selectpanel">Заканчивая:</label></li>
        <li class="col-md-3-mod">
            <div class="form-group">
                <div class="input-group date" id="datetimepicker2">
                    <input name="DateLast" type="text" class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>

            <script type="text/javascript">
      $(function () {
        //Установим для виджета русскую локаль с помощью параметра language и значения ru
        $('#datetimepicker2').datetimepicker(
          { pickTime: false, language: 'ru' }
        );
      });
            </script>
        </li>
            <li class="col-md-2-mod"><label class="lb-form-selectpanel">Услуга:</label></li>
            <li class="col-md-3-mod">
                <div class="form-group">
                    <select name="Service" class="form-control">
                        <option disabled>Выберите услугу</option>
                        <option value="Все услуги">Все услуги</option>
                        <option value="Вызов">Звонки</option>
                        <option value="СМС">СМС</option>
                        <option value="Интернет">Интернет</option>
                    </select>
                </div>
            </li>
            <li class="col-md-2-mod"><label class="lb-form-selectpanel">Тип операции:</label></li>
            <li class="col-md-3-mod">
                <div class="form-group">
                    <select name="Type" class="form-control">
                        <option disabled>Выберите тип вызова</option>
                        <option value="Входящий/Исходящий">Все операции</option>
                        <option value="Входящий">Входящий</option>
                        <option value="Исходящий">Исходящий</option>
                    </select>
                </div>
            </li>
            <li class="col-md-6"><input type="submit" class="button-select" name="button" value="Отобразить" /></li>
            <li class="col-md-6"><input type="submit" class="button-select" name="button" value="Выбрать файл" /></li>
</ul>
}

<script type="text/javascript">
  $(function () {
    //Идентификатор элемента HTML (например: #datetimepicker1), для которого необходимо инициализировать виджет "Bootstrap datetimepicker"
    $('#datetimepicker1').datetimepicker();
  });
</script>

